let i=0,score=0;

function show(){
document.getElementById("question").innerText =
"第 "+(i+1)+" 題（共 50 題）\n"+quiz[i].q;
document.getElementById("count").innerText="";
document.getElementsByName("ans").forEach(r=>r.checked=false);
}

function next(){
let sel="";
document.getElementsByName("ans").forEach(r=>{if(r.checked)sel=r.value;});
if(sel===""){alert("請選答案");return;}
if(sel===quiz[i].a)score++;
i++;
if(i<quiz.length){show();}
else{
document.querySelector(".box").innerHTML=
"<h2>測驗結束</h2><p>得分："+score+" / 50</p>";
}
}
show();
